
# בחירת תמונה בסיסית של Node.js (היכן שהאפליקציה תרוץ)
FROM node:18-alpine

# הגדרת ספריית העבודה בתוך הקונטיינר
WORKDIR /usr/src/app

# העברת כל הקבצים מהפרויקט המקומי לספריית העבודה בתוך הקונטיינר
COPY package*.json ./

# התקנת התלויות של האפליקציה
RUN npm install

# העברת כל הקבצים הנותרים מהפרויקט המקומי לספריית העבודה בתוך הקונטיינר
COPY . .
EXPOSE 3000
# הגדרת הפקודה להפעלת האפליקציה
CMD ["npm", "start"]